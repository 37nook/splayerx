{
  "compilerOptions": {
    "target": "ESNext",
    // "strict": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    // "noImplicitThis": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "newLine": "LF",
    "baseUrl": "./src",
    "paths": {
      "electron": ["../node_modules/@chiflix/electron"],
      "grpc": ["../node_modules/@grpc/grpc-js"],
      "@/*": ["renderer/*"]
    }
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}
