{
  "compileOnSave": true,
  "compilerOptions": {
    "noEmit": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "strict": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "suppressImplicitAnyIndexErrors": true,
    "newLine": "LF",
    "skipLibCheck": true
  },
  "references": [
    { "path": "src" },
    { "path": "test" }
  ]
}